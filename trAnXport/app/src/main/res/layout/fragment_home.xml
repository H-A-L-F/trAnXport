<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbot_back_orange2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="25dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_back_white"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/ET_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ic_search"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:maxLines="1"
                android:paddingStart="16sp"
                android:paddingEnd="20sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue3"
            android:elevation="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="25dp"
            android:layout_marginBottom="30dp"
            android:text="You have 4 promos waiting to be used"
            android:textColor="#ffffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffffff"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/TV_trending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/ic_arr_right"
                android:background="@android:color/transparent"
                android:text="Find out what's trending near you!"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#ff000000"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right"
                android:id="@+id/ic_arr_right"/>

        </RelativeLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="40dp"
        android:background="@drawable/round_back_white_dark"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="Check Routes"
                android:maxLines="1"
                android:textColor="#ff000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="Order Ticket"
                android:maxLines="1"
                android:textColor="#ff000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="Check Schedule"
                android:maxLines="1"
                android:textColor="#ff000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:text="More"
                android:maxLines="1"
                android:textColor="#ff000000"/>
        </LinearLayout>

    </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Nearby"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#ff000000" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textSize="12sp"
                android:textColor="@color/blue2" />

        </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/bus_stop" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Halte Busway Kuningan Timur"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="150 km"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/bus_stop" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Halte Busway Kuningan Timur"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="150 km"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/bus_stop" />

            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Halte Busway Kuningan Timur"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="150 km"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/round_back_white"
            android:elevation="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/bus_stop" />
            
            <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Halte Busway Kuningan Timur"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="150 km"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>

            </LinearLayout>

        </LinearLayout>

    </GridLayout>

</LinearLayout>