<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbot_back_orange2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_back_white"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/ET_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ic_search"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:maxLines="1"
                android:paddingStart="16sp"
                android:paddingEnd="20sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue3"
            android:elevation="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="25dp"
            android:layout_marginBottom="30dp"
            android:text="You have 4 promos waiting to be used"
            android:textColor="#ffffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffffff"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/TV_trending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/ic_arr_right"
                android:background="@android:color/transparent"
                android:text="Find out what's trending near you!"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="#ff000000"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right"
                android:id="@+id/ic_arr_right"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>